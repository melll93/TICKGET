<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="back.spring.final_back.festival.repository.SearchDao">
	<select id="searchFestivalsByKeyword" resultType="FestivalDto">
SELECT * FROM fest_main WHERE fest_m_name LIKE #{keyword} OR fest_m_loc LIKE #{keyword}
	</select>
	<select id="findAll" resultType="FestivalDto">
SELECT * FROM fest_main
	</select>
   <select id="searchCarpoolByKeyword" resultType="CarpoolDto"> 
   select * from board_carpool WHERE board_cp_title LIKE #{keyword} OR board_cp_content LIKE #{keyword}
   </select>
<select id="searchMarketByKeyword" parameterType="MarketDto" resultType="MarketDto">
  select * from board_market where board_mk_title LIKE #{keyword} OR board_mk_content LIKE #{keyword}
</select>
<select id="searchForMypage" resultType="MymymyDto">
  select * from fest_main where fest_m_author = #{memid}
</select>
<select id="searchForMypage2" resultType="MymymyDto">
  select * from board_carpool where board_cp_mem_id = #{memid}
</select>
</mapper>
